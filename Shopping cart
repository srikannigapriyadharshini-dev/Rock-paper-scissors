foods=[]
prices=[]
total=0
while True:
    food=input("Enter food name you want to buy(q to quit): ")
    if food.lower() == "q" :
        break

    else:
        price=float(input("Enter price of food: "))
        foods.append(food)
        prices.append(price)
print("--------------- Your cart --------------")

for food in foods:
    print(food,end=" ")
    total=total+price
for price in prices:
    total=total+price
print(f"Your cart total is ${total:2f}")
